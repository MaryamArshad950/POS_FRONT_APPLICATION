@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Configuration.Json
@inject IConfiguration Configuration
<script type="text/javascript">
    const app_host_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("POS_API_IP").Value);
    const api_port_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("POS_API_PNO").Value);
    const Result_API = (app_host_API + ":" + api_port_API);
    const global_host_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("GLOBAL_API_IP").Value);
    const Global_API = (global_host_API);
    var getsession = window.sessionStorage.getItem("tokenIndex");
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="~/Assets/js/servicePos/funds.js"></script>
<form class="form-horizontal">
    <div class="card">
        <div class="card-body card-funds">
            <div class="row flex-div">
                <div class="col-md-2">
                    <img src="~/Assets/images/SalaamSavings.png" id="image_logo" />
                </div>
                <div class="col-md-8">
                    <h2 class="text-lemonade text-primary text-center mt-3 mb-4">Cash Value Details</h2>
                </div>
            </div>
            <h4 class="mt-3 text-center">Cash value details of my Policy No. <span class="policy_no"></span></h4>
            <div class="row mt-4 justify-content-center">
                <div class="col-md-6">
                    <div class="row mb-1">
                        <div class="col-md-6 mb-2">
                            <div class="p-4 custom_row2 contrib_paid" type="button">

                            </div><br />
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="p-4 custom_row2 currentCashValue" type="button">

                            </div><br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4 justify-content-center mb-2">
                <div class="col-md-6">
                    <table class="table table-striped table-responsive" id="tblMyFunds">
                        <thead>
                            <tr class="salaam-color text-white">
                                <th>Type of Funds</th>
                                <th>Percentage</th>
                                <th>No. of Units</th>
                                <th>Unit Price</th>
                                <th>Current Value</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class='row mt-3 mb-3 justify-content-center text-danger text-cash' hidden>
                <i>Note: Units will be allocated at day's end</i>
            </div>
            <div class="row justify-content-center border-top">
                <div class="col-md-4">
                    <div class="py-4">
                        <p class="clearfix">
                            <span class="float-left text-primary">
                                <b>Status</b>
                            </span>
                            <span class="float-right text-muted" id="status">
                            </span>
                        </p>
                        <p class="clearfix">
                            <span class="float-left text-primary">
                                <b>Full Name</b>
                            </span>
                            <span class="float-right text-muted" id="SUM_FULL_NAME">
                            </span>
                        </p>
                        <p class="clearfix">
                            <span class="float-left text-primary">
                                <b>CNIC</b>
                            </span>
                            <span class="float-right text-muted" id="cnic">
                            </span>
                        </p>
                        <p class="clearfix">
                            <span class="float-left text-primary">
                                <b>Contact Number</b>
                            </span>
                            <span class="float-right text-muted" id="SUM_CUST_CONTPHONE">
                            </span>
                        </p>
                        <p class="clearfix">
                            <span class="float-left text-primary">
                                <b>Email Address</b>
                            </span>
                            <span class="float-right text-muted" id="SUM_USER_EMAIL_ADDR">
                            </span>
                        </p>
                        <p class="clearfix">
                            <span class="float-left text-primary">
                                <b>Permanent Address</b>
                            </span>
                            <span class="float-right text-muted" id="FSCA_ADDRESS1">
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>