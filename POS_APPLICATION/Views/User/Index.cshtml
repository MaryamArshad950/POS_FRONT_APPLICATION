@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Configuration.Json
@inject IConfiguration Configuration
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Point of Sales - Salaam Family Takaful</title>
    <link rel="stylesheet" href="~/Assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/Assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Assets/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/Assets/images/SalaamSavings.png" />
    <script src="~/Assets/js/pos.js" defer></script>
    <link rel="stylesheet" href="~/Assets/css/LandingSalaam.css" />
    <link rel="stylesheet" href="~/Assets/css/pos.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/json2/20130526/json2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/32965eb355.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://use.fontawesome.com/32965eb355.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600;700&amp;family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript">
        const app_host_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("POS_API_IP").Value);
        const api_port_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("POS_API_PNO").Value);
        const Result_API = (app_host_API + ":" + api_port_API);
    </script>
</head>
<body>
    <img src="~/Assets/images/SalaamSavings.png" class="image_logo pt-5 pl-5" />
    <div class="px-4 px-md-5 text-center text-lg-start my-1 login-section">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-7 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="mt-5 display-5 fw-bold ls-tight animated animatedFadeInUpp fadeInUpp" style="color: hsl(218, 81%, 95%)">
                    Welcome to  <br />
                    <span class="salaamText">Salaam Life &amp; Savings</span><br />
                    <span class="roller">
                        <span id="rolltext">
                            The Only Shariah Compliant Insurtech<br />
                            in Pakistan<br />
                            We are here to serve<br />
                            Your Takaful Needs
                        </span>
                    </span>
                </h1>
            </div>
            <div class="col-lg-4 mb-5 mb-lg-0 position-relative">
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>
                <div class="card bg-glass animated animatedFadeInUpp fadeInUpp">
                    <div class="card-body px-4 py-5 px-md-5">
                        <div class="tab tab-primary border-0">
                            <ul class="nav nav-tabs" id="myTab" role="tablist" hidden>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active fw-bold" id="signIn-tab" data-bs-toggle="tab" data-bs-target="#signIn" type="button" role="tab" aria-controls="signIn" aria-selected="true">SingIn</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link fw-bold bg-transparent border-0" id="recoverySetup-tab" data-bs-toggle="tab" data-bs-target="#recoverySetup" type="button" role="tab" aria-controls="recoverySetup" aria-selected="false">Recover</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link fw-bold bg-transparent border-0" id="confirmRecovery-tab" data-bs-toggle="tab" data-bs-target="#confirmPaswd" type="button" role="tab" aria-controls="confirmPaswd" aria-selected="false">Confirm</button>
                                </li>
                            </ul>
                            <div class="tab-content p-0 border-0">
                                <!---------------------------------LOGIN------------------------------------>
                                <div class="tab-pane fade active show" id="signIn" role="tabpanel" aria-labelledby="user-tab">
                                    <form action="/User/POS_USER_LOGIN" method="post" class="form-horizontal text-center">
                                        <div class="row">
                                            <div class="col-md-12 mb-4">
                                                <div class="form-outline">
                                                    <label class="form-label" for="SUM_SYS_USER_CODE">User ID</label>
                                                    <input type="text" id="SUM_SYS_USER_CODE" name="SUM_SYS_USER_CODE" class="form-control" maxlength="13" required />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="SUM_USER_PASSWORD">Password</label>
                                            <input type="password" id="SUM_USER_PASSWORD" name="SUM_USER_PASSWORD" class="form-control" required />
                                            <span class="password-toggle cursor" onclick="togglePasswordVisibility()">
                                                <i class="fa fa-eye text-muted"></i>
                                            </span>
                                        </div>
                                        <button type="submit" id="btnUserLogin" class="btn btn-primary btn-block mb-4">
                                            Sign In
                                        </button>
                                        <div class="form-outline mb-4">
                                            <a href="/Onboarding" id="createAcc">Don't have any account? Create now</a>
                                        </div>
                                    </form>
                                    <div class="form-outline mb-4 text-center">
                                        <button class="border-0 bg-tansparent" id="forgetAcc" type="button">Forgot Password? Click here</button>
                                    </div>
                                    <div class="col-md-12 m-auto">
                                        @if (TempData["WrongStatus"] != null)
                                        {
                                            <div class='alert alert-danger validation-alert border-0 bg-transparent font-weight-500 alert-dismissible fade show p-3 mt-2' role='alert'>@TempData["WrongStatus"] </div>
                                        }
                                    </div>
                                </div>

                                <!---------------------------------PASSWORD RECOVERY------------------------------------>
                                <div class="tab-pane text-center" id="recoverySetup" role="tabpanel" aria-labelledby="user-tab">
                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="usercode">User ID</label>
                                                <input type="text" id="usercode" name="usercode" class="form-control" maxlength="13" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <label class="form-label" for="contact">Contact No</label><br />
                                            <input type="tel" id="contact" name="contact" class="form-control" placeholder="3401927518" maxlength="13" required />
                                        </div>
                                    </div>
                                    <button type="button" id="btnContinueRecovery" class="btn btn-primary btn-block mb-4" onclick="VerifyContact()">
                                        Continue
                                    </button>
                                    <a class="" id="backToLogin">Back</a>
                                </div>
                                <div class="tab-pane text-center" id="confirmPaswd" role="tabpanel" aria-labelledby="user-tab">
                                    <form action="/User/UPDATE_USER_PASSWD" method="post" class="form-horizontal text-center">
                                        <h3 class="card-title">Please enter your new password</h3>
                                        <div class="form-outline mb-4">
                                            <input id="userCode" name="SUM_SYS_USER_CODE" class="form-control" required hidden />
                                            <input id="SUM_USER_EMAIL_ADDR" name="SUM_USER_EMAIL_ADDR" class="form-control" required hidden />
                                            <label class="form-label" for="newpass">New Password</label>
                                            <input type="password" id="newpass" name="SUM_USER_PASSWORD" class="form-control" required />
                                            <span class="password-toggle cursor" onclick="togglePasswordVisibility()">
                                                <i class="fa fa-eye text-muted"></i>
                                            </span>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="confirmpaswd">Confirm Password</label>
                                            <input type="password" id="confirmpaswd" name="confirmpaswd" class="form-control" required />
                                            <span class="password-toggle cursor" onclick="togglePasswordVisibility()">
                                                <i class="fa fa-eye text-muted"></i>
                                            </span>
                                        </div>
                                        <button type="submit" id="btnUpdatePassword" class="btn btn-primary btn-block mb-4">
                                            Update Password
                                        </button>
                                        <a class="" id="backToLogin">Back</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="spinner">
        <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
    </div>
</body>
</html>