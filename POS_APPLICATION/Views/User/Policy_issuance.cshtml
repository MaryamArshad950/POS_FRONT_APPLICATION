@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Configuration.Json
@inject IConfiguration Configuration
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Point of Sales - Salaam Family Takaful</title>
    <link rel="stylesheet" href="~/Assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/Assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Assets/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/Assets/images/SalaamSavings.png" />
    <script src="~/Assets/js/pos.js" defer></script>
    <script src="~/Assets/js/JSPOS/PolicyIssue.js" defer></script>
    <link rel="stylesheet" href="~/Assets/css/pos.css" />
    <link rel="stylesheet" href="~/Assets/css/PolicyIssuance.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/json2/20130526/json2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/32965eb355.js"></script>
    <script type="text/javascript">
    const app_host_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("POS_API_IP").Value);
    const api_port_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("POS_API_PNO").Value);
        const Result_API = (app_host_API + ":" + api_port_API);
        var getsession = window.sessionStorage.getItem("tokenIndex");
        if (getsession == null) {
            getsession = sessionStorage.getItem("token");
        }
    </script>
</head>
<body>
    <img src="~/Assets/images/SalaamSavings.png" class="image_logo_pol mt-5 ml-5 mb-2" />
    <div class="card bg-tansparent policy-success animated animatedFadeInUpp fadeInUpp" id="success">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div id="policyText" hidden>
                        <img src="~/Assets/images/check.png" class="notebook_image center-img" />
                        <h3 class="text-lemonade text-success text-center pb-3">
                            Thanks for Choosing Us<br />
                        </h3>
                        <h4 class="title text-center text-white pb-2">
                            Your payment has been received
                        </h4>
                        <h5 class="card-title text-center text text-white" id="">
                            Policy has been issued successfully<br />
                            Your Policy Number is <span id="policy-number"></span><br />
                            Policy Confirmation Email and SMS will be sent <br />
                            to your provided respective email and registered contact number.
                        </h5>
                        <h4 class="card-title text-center">
                            <a href="/Onboarding" id="btnPolicyToPlan">Go Back</a>
                        </h4>
                    </div>
                    <h5 class="card-title text-center text text-white" id="policyfailed" hidden>
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <div class="card p-5 animated animatedFadeInUpp fadeInUpp" id="failure" hidden>
        <div class="card-body">
            <img src="~/Assets/images/emoji.png" class="notebook_image center-emoji animated animatedFadeInUpp fadeInUpp" />
            <h3 class="title text-center pb-3">
                Payment Unapproved
            </h3>
            <h5 class="card-title text-center text">
                <a href="Basic_information">
                    Go back
                </a>
            </h5>
        </div>
    </div>
</body>
</html>